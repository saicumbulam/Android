<?xml version="1.0" encoding="utf-8"?>
<!--
  This is a masked ripple. The ripple will clip to the specified view
  or layout, and not flow into the parent. Ripple bounds are squared.

  Use this for views with multiple parents.
-->
<ripple
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:color="@color/ripple_light">
  <item android:id="@android:id/mask">
    <color android:color="@color/white"/>
  </item>
</ripple>
