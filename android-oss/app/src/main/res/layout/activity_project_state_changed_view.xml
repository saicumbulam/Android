<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/card_view"
  card_view:contentPadding="@dimen/grid_2"
  android:focusable="true"
  style="@style/ActivityFeedCard">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/project_photo"
      android:background="@drawable/gray_gradient"
      android:adjustViewBounds="true"
      android:layout_width="@dimen/activity_feed_update_photo_width"
      android:layout_height="@dimen/activity_feed_update_photo_height"
      android:scaleType="centerCrop"
      tools:ignore="ContentDescription" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/grid_2"
      android:minHeight="@dimen/activity_feed_update_photo_height"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:padding="@dimen/grid_1">

      <TextView
        style="@style/BodyPrimary"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Project state change" />

    </LinearLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>
