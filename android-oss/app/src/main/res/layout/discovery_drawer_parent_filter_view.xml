<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/filter_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginEnd="@dimen/grid_1"
  android:layout_marginStart="@dimen/grid_1"
  android:foreground="@drawable/click_indicator_light"
  android:gravity="center_vertical"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/filter_text_view"
    style="@style/DrawerTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:layout_weight="1"
    android:foreground="@null"
    tools:text="Art" />

  <FrameLayout
    android:layout_width="@dimen/grid_8"
    android:layout_height="@dimen/grid_8">

    <com.kickstarter.ui.views.IconButton
      android:id="@+id/expand_button"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/keyboard_arrow_down_icon"
      android:textColor="@color/ksr_dark_grey_500"
      android:textSize="@dimen/icon" />

    <com.kickstarter.ui.views.IconButton
      android:id="@+id/collapse_button"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/keyboard_arrow_up_icon"
      android:textColor="@color/ksr_dark_grey_500"
      android:textSize="@dimen/icon" />

  </FrameLayout>

</LinearLayout>
