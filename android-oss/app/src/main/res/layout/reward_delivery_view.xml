<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:paddingTop="@dimen/grid_4"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  tools:showIn="@layout/reward_view">

  <LinearLayout
    android:id="@+id/reward_estimated_delivery_date_section"
    android:orientation="vertical"
    android:paddingBottom="@dimen/grid_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      style="@style/RewardHeadline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/rewards_info_estimated_delivery" />

    <TextView
      style="@style/BodyPrimary"
      android:id="@+id/reward_estimated_delivery_date_text_view"
      android:paddingTop="@dimen/grid_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="September 2017" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/reward_shipping_section"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      style="@style/RewardHeadline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/rewards_info_shipping" />

    <TextView
      style="@style/BodyPrimary"
      android:id="@+id/reward_shipping_summary_text_view"
      android:paddingTop="@dimen/grid_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="Anywhere" />

  </LinearLayout>

</LinearLayout>
