<?xml version="1.0" encoding="utf-8"?>
<com.kickstarter.ui.toolbars.LoginToolbar
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:showIn="@layout/login_layout"
  style="@style/Toolbar"
  android:id="@+id/login_toolbar"
  android:elevation="0dp"
  app:contentInsetLeft="0dp"
  app:contentInsetStart="0dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.kickstarter.ui.views.IconButton
      style="@style/ToolbarIconBackButton"
      android:id="@+id/back_button" />

    <TextView
      style="@style/ToolbarTitle"
      android:id="@+id/title_text_view" />

    <com.kickstarter.ui.views.IconButton
      style="@style/ToolbarIcon"
      android:id="@+id/help_button"
      android:focusable="true"
      android:contentDescription="@string/general_navigation_accessibility_button_help_menu_label"
      android:layout_alignParentEnd="true"
      android:text="@string/more_vert_icon" />

  </RelativeLayout>

</com.kickstarter.ui.toolbars.LoginToolbar>
