<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      android:id="@+id/sign_up_with_facebook_toolbar"
      layout="@layout/login_toolbar" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingEnd="@dimen/form_margin_x"
      android:paddingStart="@dimen/form_margin_x">

      <TextView
        style="@style/BodySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_4"
        android:layout_marginTop="@dimen/grid_4"
        android:text="@string/facebook_confirmation_detail" />

      <TextView
        android:id="@+id/email"
        style="@style/CalloutPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/newsletter_switch"
        style="@style/BodySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_2"
        android:layout_marginTop="@dimen/grid_4"
        android:switchPadding="@dimen/grid_1"
        android:text="@string/signup_newsletter_full_opt_out" />

      <Button
        android:id="@+id/create_new_account_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/grid_2"
        android:layout_marginTop="@dimen/grid_1"
        android:text="@string/facebook_confirmation_button" />

      <TextView
        style="@style/BodySecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/facebook_confirmation_wrong_account_title" />

      <Button
        android:id="@+id/login_button"
        style="@style/BorderButton"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/grid_1"
        android:layout_marginTop="@dimen/grid_2"
        android:text="@string/login_buttons_log_in_email" />

    </LinearLayout>

  </LinearLayout>

</ScrollView>
