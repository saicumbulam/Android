<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/dialog_alert_rounded"
  android:layout_width="@dimen/grid_46"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:orientation="vertical">

  <TextView
    style="@style/Headline"
    android:id="@+id/title_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_4"
    android:layout_marginStart="@dimen/grid_4"
    android:layout_marginEnd="@dimen/grid_4"
    android:visibility="gone" />

  <TextView
    style="@style/CalloutPrimary"
    android:id="@+id/message_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_4"
    android:layout_marginStart="@dimen/grid_4"
    android:layout_marginEnd="@dimen/grid_4"
    android:textColor="@color/text_secondary" />

  <Button
    style="@style/BorderButton"
    android:id="@+id/ok_button"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/grid_4"
    android:text="@string/general_alert_buttons_ok" />

</LinearLayout>
